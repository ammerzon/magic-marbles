<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="1080" prefWidth="1920"
  styleClass="gameArea__container" xmlns="http://javafx.com/javafx/8.0.172-ea"
  fx:controller="com.ammerzon.presentation.board.BoardPresenter">
  <MenuBar useSystemMenuBar="true" GridPane.columnIndex="0" GridPane.columnSpan="2"
    GridPane.rowIndex="0">
    <Menu mnemonicParsing="false" text="Game">
      <MenuItem mnemonicParsing="false" onAction="#newGameMenuItemClicked" text="New Game"/>
      <MenuItem mnemonicParsing="false" onAction="#exitMenuItemClicked" text="Exit"/>
    </Menu>
  </MenuBar>

  <GridPane alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
    <GridPane fx:id="fieldGridPane" prefHeight="779.0" prefWidth="777.0"
      styleClass="gameArea__field" maxWidth="779.0" maxHeight="777.0"
      GridPane.halignment="CENTER" GridPane.valignment="CENTER">
      <GridPane.margin>
        <Insets top="50.0" left="70.0" right="70.0"/>
      </GridPane.margin>
    </GridPane>
    <columnConstraints>
      <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
      <RowConstraints/>
      <RowConstraints/>
      <RowConstraints/>
      <RowConstraints/>
    </rowConstraints>
  </GridPane>

  <rowConstraints>
    <RowConstraints/>
  </rowConstraints>
</GridPane>
